@model Product

<div class="col-md-4">
    <div class="card mb-3">
        <img src="~/images/@Model.ImgeUrl" alt="@Model.Name" height="413"/>
        <div class="card-body">
            <h4 class="card-title">
                <a href="#">@Model.Name</a>
            </h4>
            <small class="text-muted">
                <i class="fas fa-lira-sign"></i>@Model.Price
            </small>     
        </div>
        <div class="card-footer text-center">
            <a asp-controller="Shop" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-primary btn-sm">
                Detaylar
            </a>
            @if (User.Identity.IsAuthenticated)
            {
                <form asp-controller="CartItem" asp-action="AddToCart" method="post" style="display:inline">
                    <input type="hidden" name="ProductId" value="@Model.Id" />
                    <input type="hidden" name="Quantity" value="1"/>
                    <button type="submit" class="btn btn-outline-primary btn-sm ml-3">
                        Kart Ekle
                    </button>
                </form>
            }
        </div>
    </div>
</div>
