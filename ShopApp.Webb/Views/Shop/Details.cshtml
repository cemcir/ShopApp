@model ProductDetailsModel
@{
    ViewData["Title"] = "Details";
}

<div class="row">
    <div class="col-md-3">
        <img src="~/images/@Model.Product.ImgeUrl" alt="@Model.Product.Name" class="img-fluid"/>
    </div>
    <div class="col-md-9">
        <h1 class="mb-3">
            @Model.Product.Name
        </h1>
        <hr />
        @foreach (var category in Model.Categories) {
            <a href="#" class="btn btn-link p-0 mb-3">@category.Name</a>
        }
            <div class="mb-3">
                <h4 class="text-primary mb-3">
                    @Model.Product.Price  TL
                </h4>

                <form asp-controller="Cart" asp-action="AddToCart" method="post">
                    <input type="hidden" name="productId" value="@Model.Product.Id" />
                    <div>
                        <div class="form-group row">
                            <input type="number" name="quantity" class="form-control" value="1" min="1" step="1" style="width:100px"/>
                        </div>
                        <div class="form-group row">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-cart-plus"></i>Kart Ekle
                            </button>
                        </div>
                    </div>
                </form>
            </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <p class="p-3">
            @Html.Raw(Model.Product.Description)
        </p>
    </div>
</div>
